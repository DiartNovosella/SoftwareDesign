@model WebApplication1.Models.Home.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .checked {
        color: orange;
    }
</style>
<div class="col-lg-12">
    <div class="dropdown" style="margin-bottom:10px">
        
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Sort by...
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a asp-controller="Home" asp-action="Index" asp-route-sortBy="rating">Rating</a></li>
        </ul>

    </div>
    <div class="row">

        @foreach (var item in Model.Courses)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="~/images/@item.Image" alt="">
                    <div class="caption">
                        <h4>
                            <a asp-controller="Home" asp-action="CourseDetails" asp-route-id="@item.Id">@item.Name</a>
                        </h4>
                        <p>@item.Description</p>
                    </div>
                    <div class="ratings">
                        <p>
                            @for (var i = 0; i < item.Rating; i++)
                             {
                                  <span class="fa fa-star checked"></span>
                             }
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
